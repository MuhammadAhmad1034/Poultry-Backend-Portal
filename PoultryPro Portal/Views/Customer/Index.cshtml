@{
    ViewData["Title"] = "Customer Management";
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Customer Management</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="~/css/customerManagement.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
</head>
<body>
    <div class="container-fluid">
        <div class="row">
            <!-- Sidebar -->
            <div class="col-md-2 sidebar">
                <h4 class="text-center mb-4">Henly Portal</h4>
                <nav class="nav flex-column">
                    <a class="nav-link" asp-action="AgentDashboard" asp-controller="DashBoard"><i class="fas fa-home"></i> Dashboard</a>
                    <a class="nav-link" href="#"><i class="fas fa-box"></i> Inventory</a>
                    <a class="nav-link active" asp-action="Index" asp-controller="Customer"><i class="fas fa-users"></i> Customers</a>
                    
                </nav>
            </div>

            <!-- Main Content -->
            <div class="col-md-10 main-content">
                <!-- Top Bar -->
                <div class="row mb-4 align-items-center">
                    <div class="col-md-6">
                        <div class="input-group">
                            <input type="text" class="form-control" id="searchBar" placeholder="Search customers...">
                            <select class="form-select" id="searchType" style="max-width: 150px;">
                                <option value="name">Name</option>
                                <option value="city">City</option>
                                <option value="contact">Contact</option>
                            </select>
                            <button class="btn btn-primary" id="searchBtn"><i class="fas fa-search"></i> Search</button>
                        </div>
                    </div>
                </div>

                <!-- Tabs for Suppliers and Wholesalers -->
                <ul class="nav nav-tabs" id="customerTabs" role="tablist">
                    <li class="nav-item" role="presentation">
                        <button class="nav-link active" id="suppliers-tab" data-bs-toggle="tab" data-bs-target="#suppliers" type="button" role="tab" aria-controls="suppliers" aria-selected="true">Suppliers</button>
                    </li>
                    <li class="nav-item" role="presentation">
                        <button class="nav-link" id="wholesalers-tab" data-bs-toggle="tab" data-bs-target="#wholesalers" type="button" role="tab" aria-controls="wholesalers" aria-selected="false">Wholesalers</button>
                    </li>
                </ul>

                <!-- Tab Contents for Suppliers and Wholesalers -->
                <div class="tab-content">
                    <!-- Suppliers Tab -->
                    <div class="tab-pane fade show active" id="suppliers" role="tabpanel" aria-labelledby="suppliers-tab">
                        <div class="row" id="suppliersList"></div>
                    </div>

                    <!-- Wholesalers Tab -->
                    <div class="tab-pane fade" id="wholesalers" role="tabpanel" aria-labelledby="wholesalers-tab">
                        <div class="row" id="wholesalersList"></div>
                    </div>
                </div>

            </div>
        </div>
    </div>
    
    <nav aria-label="Order table pagination">
        <ul class="pagination justify-content-end" id="paginationControls">
            <!-- Pagination items will be dynamically generated -->
        </ul>
    </nav>
    <!-- Customer Details Modal -->
    <div id="customerDetailModal" class="modal fade" tabindex="-1">
        <div class="modal-dialog modal-lg">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">Customer Details</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <!-- Customer details content will be populated here dynamically -->
                    <div id="customerDetailsContent"></div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                </div>
            </div>
        </div>
    </div>

    <!-- Scripts -->
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
    
    <script src="~/js/CustomerManagement.js"></script>
</body>
</html>
